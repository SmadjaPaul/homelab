# Example environment file for local development
# Copy this file to .env and fill in your values
# DO NOT commit .env to git!

# =============================================================================
# Cloudflare
# =============================================================================
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ZONE_ID=your_zone_id_here
CLOUDFLARE_ACCOUNT_ID=your_account_id_here
CLOUDFLARE_TUNNEL_SECRET=$(openssl rand -base64 32)
# CLOUDFLARE_TUNNEL_ID=leave_empty_to_create_new

# =============================================================================
# OCI (Oracle Cloud Infrastructure)
# =============================================================================
OCI_COMPARTMENT_ID=ocid1.compartment.oc1..aaaaaaaaxxxxxx
OCI_USER_OCID=ocid1.user.oc1..aaaaaaaaxxxxxx
OCI_CLI_USER=your_email@example.com
OCI_CLI_TENANCY=ocid1.tenancy.oc1..aaaaaaaaxxxxxx
OCI_CLI_FINGERPRINT=aa:bb:cc:dd:ee:ff:00:11
OCI_CLI_KEY_CONTENT="-----BEGIN RSA PRIVATE KEY-----
MIIEpAIBAAKCAQEA...
-----END RSA PRIVATE KEY-----"

# =============================================================================
# SSH
# =============================================================================
SSH_PUBLIC_KEY="ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAI... your_email@example.com"
# SSH_PRIVATE_KEY_PATH=~/.ssh/oci-homelab

# =============================================================================
# Tailscale
# =============================================================================
TAILSCALE_AUTH_KEY=tskey-auth-xxxxxxxxxxxx-xxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# Omni (Sidero Labs)
# =============================================================================
OMNI_ENDPOINT=https://xxxxxx.omni.siderolabs.io:50001
OMNI_KEY=omni-key-xxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# Doppler
# =============================================================================
DOPPLER_TOKEN=dp.st.xxxxxxxx.xxxxxxxx

# =============================================================================
# Authentik (optionnel - configuré après déploiement initial)
# =============================================================================

# =============================================================================
# Divers
# =============================================================================
ALERT_EMAIL=admin@smadja.dev
# ENABLE_GEO_RESTRICTION=true
# ALLOWED_EMAILS=user1@example.com,user2@example.com
